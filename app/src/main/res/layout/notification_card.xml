<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:background="@color/colorPrimaryYelloWT"
                android:padding="10sp"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryYelloWT"
                    android:orientation="vertical"
                    android:padding="5sp">

                    <com.geliddroid.mysore.CustomWidget.CustomTextView
                        android:id="@+id/cvnDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/cloud"
                        android:textSize="10sp" />

                    <com.geliddroid.mysore.CustomWidget.CustomTextView
                        android:id="@+id/cvnTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:textColor="@color/cloud"
                        android:textSize="17sp"
                        android:textStyle="italic|bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2sp"
                        android:background="@color/colorPrimary" />

                    <com.geliddroid.mysore.CustomWidget.CustomTextViews
                        android:id="@+id/cvnDiscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5sp"
                        android:textColor="@color/cloud"
                        android:textStyle="italic" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>