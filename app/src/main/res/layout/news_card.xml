<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2sp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimaryYelloWT">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                app:cardBackgroundColor="#ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/newsId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/news_image"
                            android:layout_width="match_parent"
                            android:layout_height="200sp"
                            android:scaleType="fitXY" />

                        <com.geliddroid.mysore.CustomWidget.CustomTextViews
                            android:id="@+id/news_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="#b91d1c1c"
                            android:gravity="end"
                            android:padding="10sp"
                            android:textColor="@color/cloud"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <com.geliddroid.mysore.CustomWidget.CustomTextView
                        android:id="@+id/news_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/colorPrimary"
                        android:gravity="bottom"
                        android:maxLines="3"
                        android:padding="10sp"
                        android:text="@string/app_name"
                        android:textColor="@color/cloud" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>